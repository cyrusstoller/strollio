<header class="jumbotron masthead">
  <div class="inner">
    <h1>Welcome!</h1>    
  </div>
</header>

<p>
  <% %w[facebook twitter instagram foursquare].each do |service| %>
    <li>
      <%= service.capitalize %>
      <% if @profiles && @profiles[service] %>
        <div class="service-is-connected">
          is connected
          <% @profiles[service] %>
        </div>
      <% else %>
        is not connected.
        <%= link_to "Connect", "/auth/singly?service=#{service}" %>
      <% end %>
    </li>
  <% end %>
</p>